rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    // Note: For Telegram WebApp, we need to verify on server side
    // This is a basic check - you should implement proper authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // For Telegram WebApp without Firebase Auth, we need to verify via server
    // This rule allows access but you MUST verify userId on server side
    match /users/{userId} {
      // Allow read/write only to own user document
      // WARNING: This relies on client-side userId - verify on server!
      allow read, write: if request.resource == null || 
                            (request.resource.data.keys().hasAll(['createdAt']) && 
                             resource == null || resource.data.createdAt == request.resource.data.createdAt);
      
      match /subscriptions/{subscriptionId} {
        // User can only access their own subscriptions
        // IMPORTANT: Verify userId matches authenticated user on server
        allow read, write: if true; // ⚠️ TEMPORARY - Add server-side verification!
      }
      
      match /categories/{categoryId} {
        // User can only access their own categories
        allow read, write: if true; // ⚠️ TEMPORARY - Add server-side verification!
      }
    }
    
    // Config collection - read only for authenticated users
    match /config/{document} {
      allow read: if true; // Public read for now
      allow write: if false; // Disable writes until admin system is implemented
    }
    
    // Remove the dangerous fallback rule!
    // DO NOT allow access to all documents
  }
}
