rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to user's own data
    match /users/{userId} {
      // Allow read/write to user document itself
      allow read, write: if true;
      
      // Allow access to user's subscriptions
      match /subscriptions/{subscriptionId} {
        allow read, write: if true;
      }
      
      // Allow access to user's categories
      match /categories/{categoryId} {
        allow read, write: if true;
      }
    }
    
    // Fallback: allow all other documents (for backward compatibility)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}